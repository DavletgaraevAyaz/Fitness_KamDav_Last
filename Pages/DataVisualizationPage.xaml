<Page x:Class="FitnessOsnova_Kam_Dav.Pages.DataVisualizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitnessOsnova_Kam_Dav.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataVisualizationPage">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <ComboBox
                x:Name="CategoryComboBox"
                Width="200"
                Height="30"
                SelectionChanged="CategoryComboBox_SelectionChanged">
                <ComboBoxItem Content="Абонемент" />
                <ComboBoxItem Content="Финансовые операции" />
            </ComboBox>

            <Button
                Width="100"
                Margin="20,0,0,0"
                Click="Button_Click"
                Content="Назад" />
        </StackPanel>

        <Canvas
            x:Name="PlotCanvas"
            Height="300"
            Margin="10,23,10,10"
            Background="White" />
    </StackPanel>
</Page>
