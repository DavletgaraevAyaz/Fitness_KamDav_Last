<Page x:Class="FitnessOsnova_Kam_Dav.Pages.EditGymPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование зала">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0.0" Color="#E0FFFF" />
                <GradientStop Offset="1.0" Color="#00BFFF" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Margin="20">
            <TextBlock Text="Редактирование зала" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Название зала:"/>
            <TextBox x:Name="GymNameTextBox" Margin="0,0,0,10"/>

            <Label Content="Местоположение:"/>
            <TextBox x:Name="LocationTextBox" Margin="0,0,0,10"/>

            <Label Content="Удобства:"/>
            <TextBox x:Name="FacilitiesTextBox" Margin="0,0,0,10"/>

            <Label Content="Вместимость:"/>
            <TextBox x:Name="CapacityTextBox" Margin="0,0,0,10"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,20,0,0" Background="#00BFFF" Foreground="White" />

            <Button Content="Назад" Click="BackButton_Click" Margin="0,20,0,0" Background="#00BFFF" Foreground="White" />
        </StackPanel>
    </Grid>
</Page>