<Page x:Class="FitnessOsnova_Kam_Dav.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MainPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0.0" Color="#E0FFFF" />
                <GradientStop Offset="1.0" Color="#00BFFF" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Добро пожаловать!" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button Content="Профиль пользователя" Margin="10" Height="40" Click="UserProfileButton_Click" Background="#00BFFF"
Foreground="White" />
            <Button Content="Тренировки" Margin="10" Height="40" Click="TrainingsButton_Click" Background="#00BFFF"
Foreground="White" />
            <Button Content="Отзывы" Margin="10" Height="40" Click="FeedbackButton_Click" Background="#00BFFF"
Foreground="White" />
            <Button Content="Отчеты" Margin="10" Height="40" Click="DataVizButton_Click" Background="#00BFFF"
Foreground="White" />
            <Button Content="Выход" Margin="10" Height="40" Click="LogoutButton_Click" Background="#00BFFF"
Foreground="White" />
            
        </StackPanel>
    </Grid>
</Page>